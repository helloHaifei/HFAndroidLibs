<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haifei.ui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin" >

    <com.haifei.view.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:contentText="内容"
        custom:titleText="标题" />

    <com.haifei.view.RainbowProcessBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:rainbowbar_color="@color/red"
        custom:rainbowbar_hspace="50dp"
        custom:rainbowbar_vspace="2dp" />

</LinearLayout>